{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/Sparks/_Particles.jsx",
    "components/Sparks/post/Waterpass.jsx",
    "components/Sparks/post/Glitchpass.jsx",
    "components/Sparks/_Effects.jsx",
    "components/Rendering/_Sparks.jsx",
    "components/Rendering/_Sparks.jsx",
    "components/Rendering/index.jsx"
  ],
  "exclude": ["node_modules"]
}
